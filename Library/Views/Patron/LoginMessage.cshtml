@using Library.Models;
@{
  Layout = "_Layout";
}


@if(@Model.GetName() == "none")
{
    <h2>This user name could not be found. Click <a href="/patron/login"> here </a> to try again. </h2>
}
else if (@Model.GetPassword() == "none")
{
    <h2>Wrong password, Click <a href="/patron/login"> here </a> to try again</h2>
}

else
{
    <h2>Thank you for logging in @Model.GetName().</h2>
    <h3><a href="/patron/show/@Model.GetId()">Click to continue to your account</a></h3>

}
<h4><a href="/">Back home</a></h4>
@using Library.Models;
@{
  Layout = "_Layout";
}

<h2>Add book by <strong>@Model.GetName()</strong> to Library Database:</h2>
<hr>

<form action="/authors/@Model.GetId()/show" method="post">
  <div class = "form-group row">
      <div class="col col-md-3">
        <label for="bookName">Title: </label>
        <input class="form-control" id="bookName" name="bookName" type="text" required>
      </div>
      <div class="col col-md-3">
        <label for="year">Year: </label>
        <input class="form-control" id="year" name="year" type="number" required>
      </div>
  </div>
  <div class = "form-group row">
    <button class="btn btn-primary btn-lg" type="submit">Submit</button>
  </div>
</form>

<h4><a href="/">Back home</a></h4>
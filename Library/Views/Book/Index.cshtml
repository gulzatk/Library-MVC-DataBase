@using System.Collections.Generic;
@using Library.Models;
@{
  Layout = "_Layout";
}

<h2>Books</h2>

@if(@Model.Count == 0)
{
  <h3>There are no books in the Library Database</h3>
}

else
{
  <ul>
    @foreach(Book book in @Model)
    {
      <li><a href="/books/@book.GetId()/show">@book.GetName()</a></li>
    }
  </ul>  
}
<h4><a href="/">Back home</a></h4>
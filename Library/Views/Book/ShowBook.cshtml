@using Library.Models;
@{
  Layout = "_Layout";
}

<h3>Title: @Model["book"].GetName()</h3>
<h3>Author: @Model["author"].GetName()</h3>
<h3>Year: @Model["book"].GetYear()</h3>
<h3>Copies: @Model["copy"].GetCount()</h3>
<h3>Available: @Model["copy"].GetAvailable()</h3>
<hr>

<h4>Update the number of copies for @Model["book"].GetName()</h3>
<form action='/books/@Model["book"].GetId()/show' method="post">
  <div class = "form-group row">
      <div class="col col-md-3">
        <label for="count">Total Books: </label>
        <input class="form-control" id="count" name="count" type="number" required>
      </div>
  </div>
  <div class = "form-group row">
    <button class="btn btn-primary btn-lg" type="submit">Update</button>
  </div>
</form>
<h4><a href="/books">Return to book list</a></h4>
<h4><a href="/">Back home</a></h4>

@using Library.Models;
@{
  Layout = "_Layout";
}

<h2>Authors</h2>

<hr>

@if(@Model.Count == 0)
{
  <h3>There are no Authors in the Library Database</h3>
}

else
{
  <ul>
    @foreach(Author author in @Model)
    {
      <li><a href="authors/@author.GetId()/show">@author.GetName()</a></li>
    }
  </ul>  
}

<hr>
<h4>Click <a href="/authors/new"> here </a> to add new Author</h4>
<h4><a href="/">Back home</a></h4>
